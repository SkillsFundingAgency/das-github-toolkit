# Default .editorconfig
# https://gds-way.cloudapps.digital/manuals/programming-languages/editorconfig
# https://github.com/PowerShell/PowerShellEditorServices/blob/master/.editorconfig

root = true

[*]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.{json,yml}]
indent_size = 2

[*.{ps1,psm1,psd1}]
indent_size = 4

# Setting indent_size to unset so valid YAML can be used in Mock of Get-GitHubRepoFileContent
[/tests/UT.Update-AzurePipelineDependencies.Tests.ps1]
indent_size = unset

[*.{cs}]
indent_size = 4
